---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section id="home" class="home-section">
    <h1>Welcome to Recipe Tracker</h1>
    <p>
      Discover delicious recipes and track your calorie intake effortlessly!
    </p>
    <a href="#download" class="cta-button">Get Started</a>
  </section>

  <style>
    .home-section {
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      background: linear-gradient(135deg, #ff6f61, #ffd166);
      color: #fff;
      text-align: center;
    }
    .home-section h1 {
      font-size: 4rem;
      margin-bottom: 10px;
    }
    .home-section p {
      font-size: 1.5rem;
      margin-bottom: 20px;
    }
    .cta-button {
      background: #ffd166;
      color: #ff6f61;
      padding: 10px 20px;
      border-radius: 20px;
      text-decoration: none;
      font-weight: bold;
      transition: background 0.3s ease;
    }
    .cta-button:hover {
      background: #ff9f6e;
      color: #fff;
    }
  </style>
</Layout>
