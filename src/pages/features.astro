---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section class="section">
    <h1>App Features</h1>
    <ul class="features-list">
      <li>🍲 Easy Recipe Search with Filters</li>
      <li>📊 Calorie Tracking and Nutritional Insights</li>
      <li>🛒 Shopping List Integration</li>
      <li>🔔 Meal Planning Reminders</li>
    </ul>
  </section>

  <style>
    .features-list {
      list-style: none;
      padding: 0;
      font-size: 1.5rem;
    }
    .features-list li {
      margin-bottom: 10px;
    }
  </style>
</Layout>
